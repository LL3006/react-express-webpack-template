{
  "plugins":["babel", "react"],
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
},
  "globals": {
    "exampleGlobalVariable": true
  },
  "rules": {

    "no-unused-vars": "warn",

    //Enforce style
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "quotes": ["error", "double"]
    
  }
}